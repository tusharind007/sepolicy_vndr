# ais_server service
type vendor_ais_server, domain;
type vendor_ais_server_exec, exec_type, file_type, vendor_file_type;

init_daemon_domain(vendor_ais_server)

userdebug_or_eng(`
allow vendor_ais_server su:unix_dgram_socket sendto;
')
hal_client_domain(vendor_ais_server, hal_graphics_allocator)
allow vendor_ais_server vendor_camera_socket:dir w_dir_perms;
allow vendor_ais_server vendor_camera_socket:sock_file create_file_perms;
allow vendor_ais_server video_device:chr_file rw_file_perms;
allow vendor_ais_server hal_tv_input_default:unix_dgram_socket sendto;
allow vendor_ais_server vendor_qcarcam_edrm_rvc:fd use;
allow vendor_ais_server ais_v4l2_proxy:fd use;
allow vendor_ais_server devpts:chr_file { read write };
# gpu resources
allow vendor_ais_server gpu_device:chr_file rw_file_perms;
allow vendor_ais_server graphics_device:chr_file { ioctl open read write };
allow vendor_ais_server ion_device:chr_file r_file_perms;
# To create and delete singleton lock
allow vendor_ais_server vendor_camera_socket:file create;
allow vendor_ais_server vendor_camera_socket:file unlink;
# To connect v4l2 proxy service
allow vendor_ais_server ais_v4l2_proxy:unix_stream_socket { read write };

allow vendor_ais_server su:fifo_file read;
allow vendor_ais_server self:qipcrtr_socket create;
