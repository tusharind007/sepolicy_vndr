type qcarcam_edrm_rvc, domain;
type qcarcam_edrm_rvc_exec, exec_type, vendor_file_type, file_type;

init_daemon_domain(qcarcam_edrm_rvc)

allow qcarcam_edrm_rvc camera_socket_device:dir search;
allow qcarcam_edrm_rvc camera_socket_device:sock_file write;
allow qcarcam_edrm_rvc hal_graphics_allocator_default:fd use;
allow qcarcam_edrm_rvc ais_server:unix_stream_socket connectto;
allow qcarcam_edrm_rvc ion_device:chr_file rw_file_perms;
allow qcarcam_edrm_rvc gpu_device:chr_file { ioctl map open read write };
allow qcarcam_edrm_rvc graphics_device:chr_file { ioctl open read write };
allow qcarcam_edrm_rvc hal_graphics_mapper_hwservice:hwservice_manager find;
allow qcarcam_edrm_rvc hwservicemanager:binder call;
allow qcarcam_edrm_rvc hwservicemanager_prop:file { getattr map open read };
allow qcarcam_edrm_rvc sysfs_kgsl:file { getattr open read };
