type vendor_early_chime, domain;
type vendor_early_chime_exec, exec_type, vendor_file_type, file_type;
init_daemon_domain(vendor_early_chime)

allow vendor_early_chime audio_device:dir search;
allow vendor_early_chime audio_device:dir rw_dir_perms;;
allow vendor_early_chime audio_device:chr_file rw_file_perms;
allow vendor_early_chime audio_device:chr_file {map ioctl};
allow vendor_early_chime kmsg_device:chr_file rw_file_perms;
allow vendor_early_chime sysfs:file rw_file_perms;
allow vendor_early_chime vendor_early_services:dir r_dir_perms;
allow vendor_early_chime vendor_early_services:file r_file_perms;
allow vendor_early_chime vendor_early_chime:capability {sys_module};
allow vendor_early_chime vendor_acdb_loader_service:binder call;
allow vendor_early_chime vendor_acdb_loader_service_service:service_manager find;
allow vendor_early_chime vendor_audio_hal_plugin_service:binder call;
allow vendor_early_chime vendor_audio_hal_plugin_service_service:service_manager find;
allow vendor_early_chime vendor_sysfs_kpi:file w_file_perms;
